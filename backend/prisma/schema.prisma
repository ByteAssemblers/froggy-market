generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model collections {
  id                   String   @id @default(cuid())
  name                 String
  symbol               String
  description          String?
  profileInscriptionId String?
  socialLink           String?
  personalLink         String?
  totalSupply          Int?
  walletAddress        String
  approve              Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  inscriptions inscriptions[]
}

model inscriptions {
  id            String   @id @default(cuid())
  collectionId  String
  inscriptionId String   @unique
  name          String?
  attributes    Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  collection collections @relation(fields: [collectionId], references: [id])
  listings   listings[]
}

model listings {
  id            String   @id @default(cuid())
  inscriptionId String?
  status        String   @default("unlisted") // unlisted, listed, sold, sent
  psbtBase64    String?
  priceSats     Int?
  sellerAddress String
  buyerAddress  String?
  txid          String?
  createdAt     DateTime @default(now())

  inscription inscriptions? @relation(fields: [inscriptionId], references: [id])
}
