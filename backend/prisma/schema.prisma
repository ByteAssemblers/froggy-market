generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model collections {
  id                   String   @id @default(cuid())
  name                 String
  symbol               String
  description          String?
  profileInscriptionId String?
  socialLink           String?
  personalLink         String?
  totalSupply          Int?
  walletAddress        String
  approve              Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  inscriptions inscriptions[]
}

model inscriptions {
  id            String   @id @default(cuid())
  collectionId  String
  inscriptionId String   @unique
  name          String?
  attributes    Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  collection collections            @relation(fields: [collectionId], references: [id])
  activities inscription_activities[]
}

model inscription_activities {
  id            String   @id @default(cuid())
  inscriptionId String
  state         State
  sellerAddress String
  price         Float?
  buyerAddress  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  inscription inscriptions @relation(fields: [inscriptionId], references: [id])
}

enum State {
  unlisted
  listed
  sold
  sent
}
