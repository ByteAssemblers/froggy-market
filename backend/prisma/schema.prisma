generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  id                 Int       @id @default(autoincrement())  // Unique identifier
  name               String    // Name of the collection
  symbol             String    // Minimum 4 characters, lowercase letters and hyphen only
  description        String    // Description of the collection
  profileInscriptionId String  // Inscription ID for the profile
  onlineUrl          String    // Online URL
  myUrl              String?   // Optional personal URL
  totalSupply        Int       // Total supply of the collection
  inscriptionsList   Json      // List of inscriptions (JSON format)
  walletAddress      String    // Foreign key to user wallet address
  createdAt          DateTime  @default(now())  // Timestamp for when the collection is created
  updatedAt          DateTime  @updatedAt         // Timestamp for when the collection was last updated
}
